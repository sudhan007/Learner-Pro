generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  phoneNumber String @unique
}

model WebinarForm {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  phoneNumber     String
  certificateName String
  currentPosition String
  createdAt       DateTime @default(now())
}

model BootCampForm {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  phoneNumber     String
  certificateName String
  currentPosition String
  createdAt       DateTime @default(now())
}

model PayRollCourseForm {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  phoneNumber     String
  certificateName String
  currentPosition String
  createdAt       DateTime @default(now())
}

model InternshipForm {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  collegeName    String
  phoneNumber    String
  email          String
  areaofInterest String
  fieldofStudy   String
  gender         String
  classMode      String
  programType    String
  createdAt      DateTime @default(now())
}

model FooterForm {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  email1 String
}

model FaqQuestions {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  query String
}

model WorkshopForm {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  phoneNumber     String   @unique
  currentPosition String
  collegeName     String
  createdAt       DateTime @default(now())
}
